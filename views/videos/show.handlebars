<div class="contents-container">

  <a id="edit" href="/videos/{{video._id}}/edit"  class="input-button">
    <div>
      <p>Update</p>
    </div>
  </a>

  <form method="post" action="/videos/{{video._id}}/deletions">
    <button type="submit" class="input-button" id="delete">Delete</delete>
  </form>

  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <iframe class="video-player" src="{{video.videoUrl}}" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>
  </div>
</div>
